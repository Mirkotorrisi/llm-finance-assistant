# OpenAI API Key for LLM functionality
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# PostgreSQL connection details (defaults provided, can be overridden)
DB_HOST=ai-financial-assistant-bollette.e.aivencloud.com
DB_PORT=22782
DB_NAME=defaultdb
DB_USER=avnadmin
DB_PASSWORD=your_database_password_here
DB_SSL_MODE=require

# Application Environment (development/production)
# In development mode, tables are automatically created on startup
ENVIRONMENT=development

# Database Usage (true/false)
# Set to false to use in-memory storage instead of PostgreSQL
USE_DATABASE=true
